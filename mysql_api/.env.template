# 
# Environment Configuration Template for Concierge Entities API
# Copy this file to .env and fill in your actual values
# Dependencies: None (template file)
#

# MySQL Database Configuration (Required)
MYSQL_HOST=wsmontes.mysql.pythonanywhere-services.com
MYSQL_USER=wsmontes
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=wsmontes$concierge_db
MYSQL_PORT=3306

# Database Connection Pool Settings
MYSQL_POOL_SIZE=5
MYSQL_POOL_NAME=concierge_pool

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_secret_key_here

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=*

# Optional: Logging Level
LOG_LEVEL=INFO